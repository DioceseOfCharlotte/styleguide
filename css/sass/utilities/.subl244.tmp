/* ==========================================================================
   BUTTONS
   ========================================================================== */

$Placeholder-Selectors: ();

@mixin button($bg-color: $base-button-color, $font-color: #fff) {

  border-radius: $base-border-radius;
  border: none;
  border-bottom-style: solid;
  border-bottom-width: 1px;
  border-bottom-color: $bg-color;
  background-color: $bg-color;
  color: $font-color;
  display: inline-block;
  letter-spacing: .15em;
  padding: 12px 32px 8px;
  margin-bottom: 13px;
  margin-top: 13px;
  min-height: 26px;
  text-align: center;
  text-decoration: none; 
  outline: 0;
  text-transform: uppercase;
  -webkit-transform: translate3d(0,0,0);
  // transition: color .4s, background-color .4s, border .4s;
  box-shadow: 0 2px 5px 0 rgba(0,0,0,.36);
// transition: box-shadow 0.28s cubic-bezier(0.4, 0, 0.2, 1);

-moz-transition: all .28s cubic-bezier(.4,0,.2,1);
-webkit-transition: all .28s cubic-bezier(.4,0,.2,1);
transition: all .28s cubic-bezier(.4,0,.2,1);

&:not(.btn-disabled):hover { 
    border-bottom-width: 1px;
 border-color: mix(white, $bg-color, 5%);
 border-bottom-color: mix(black, $bg-color, 20%);
 background-color: mix(black, $bg-color, 5%);
  color: $font-color;
    box-shadow: 0 6px 14px 0 rgba(0,0,0,.36);
    //-webkit-transform: scale(1.01);
    // -ms-transform: translate(0px, -2px);
    // transform: translate(0px, -2px);
    -moz-transform: translate3d(0,0,1);
-webkit-transform: translate3d(0,-0.5px,0);
transform: translate3d(0,0,1);
}

&:not(.btn-disabled):active, &:not(.btn-disabled):focus { 
  //border-color: mix(black, $bg-color, 40%);
  background-color: mix(black, $bg-color, 20%);
  border-bottom-color: mix(black, $bg-color, 20%);
  color: $font-color;
  outline: 0;
}

&.btn-hollow {
  background: none;
  color: mix(white, $base-font-color, 20%);
  border: none;

  &:hover {
  background: none;
  color: $base-font-color;
  }
  &:active, &:focus {
  background: none;
  color: mix(black, $base-font-color, 50%);
  //border-color: mix(black, $bg-color, 15%);
  }
}

&.btn-disabled {
  background-color: mix(white, $bg-color, 70%);
  cursor: default;
  opacity: 0.7;
  border: none;
  box-shadow: none;
}
// &.btn-gray {
//   background-color: $gray-light-2;
//   border: none;
//   color: $base-font-color;
// &:hover{
//   background-color: mix(black, $gray-light-2, 5%);
// }
//  &:active, &:focus {
//   background-color: mix(black, $gray-light-2, 15%);
// }
// }
&.btn-full {
  //border-radius: .25em;
  display: block;
  margin-left: auto;
  margin-right: auto;
  text-align: center;
  width: 100%;
}
}

/* ==========================================================================
   FLASHES
   ========================================================================== */

@mixin flash($color) {
  background: $color;
  color: #555;
  border-radius: $base-border-radius;
  strong {
    color: darken($color, 50);
    text-transform: uppercase;
  }
  a {
    color: darken($color, 70);

    &:hover {
      color: darken($color, 90);
    }
  }
  &:before {
    color: darken($color, 30);
    border-color: darken($color, 30);
  }
}

%flash-base {
  margin-bottom: $base-line-height / 2;
  padding: $base-line-height / 2;
}

%flash-alert {
  @extend %flash-base;
  @include flash($alert-color);
}

%flash-error {
  @extend %flash-base;
  @include flash($error-color);
}

%flash-notice {
  @extend %flash-base;
  @include flash($notice-color);
}

%flash-success {
  @extend %flash-base;
  @include flash($success-color);
}

/* ==========================================================================
   ERRORS
   ========================================================================== */

%error {
  color: darken($error-color, 60);
}

%warning {
  color: darken($alert-color, 60);
}

%notice {
  color: darken($notice-color, 60);
}

/* ==========================================================================
   HIDE-TEXT
   ========================================================================== */

%hide-text {
  @include hide-text;
}

/* ==========================================================================
   CLEARFIX
   ========================================================================== */

%clearfix {
  @include clearfix;
}

%shadow-small {
box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.26);
}
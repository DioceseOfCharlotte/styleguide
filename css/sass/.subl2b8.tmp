@function set-swatch-text-color($color) {
    @if (lightness( $color ) > 60) {
      @return #444;
    }
    @else {
      @return #FFFFFF;
    }
}

.sg-swatch {
text-align: center;
  -webkit-transition: all .2s ease-in-out;
  -moz-transition: all .2s ease-in-out;
  -o-transition: all .2s ease-in-out;
  transition: all .2s ease-in-out;
}

.sg-swatch:before {
  font-size: 1.4em;
  //@include scut-vcenter-lh(100px);
}

.shield-blue {
    background-color: $shield-blue;
    color: $shield-blue;
    &:hover {
      color: set-swatch-text-color($shield-blue);
    }
    &:before {
      content: "#{$shield-blue}";
    }
  }

